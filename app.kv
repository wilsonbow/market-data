BoxLayout:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.5

            Label:

                canvas.before:
                    Color:
                        rgba: 1, 0.29, 0.44, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                id: user_fns
                color: 100, 0.95, 0.44, 1
                text: 'Control Panel'

            Button:
                text: 'Add to watchlist'
                on_release: app.add_to_watchlist_menu()

            Button:
                text: 'Show watchlists'
                on_release: app.choose_watchlist_menu()

        BoxLayout:
            orientation: 'vertical'
            id: menu
            Label:
                text: 'menu space'

    BoxLayout:
        orientation: 'vertical'

        Label:

            id: statusbar

            canvas.before:
                Color:
                    rgba: 0.06, 0.48, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint_y: 0.08
            text: 'status'
            color: 1,1,1,1

        GridLayout:

            cols: 4

            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: watchlist
            text: 'the watchlist will be here'

        Label:

            canvas.before:
                Color:
                    rgba: 1, 0.67, 0.13, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint_y: 0.08
            text: 'scrollbar'
            color: 1,0,0,1
